{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Recettes de la Communauté{% endblock %}


{% block body %}
    <div class="container mt-4">
        <h1>Recettes de la Communauté</h1>
        {% if not recipes.items is same as ([]) %}
            <div class="count mt-4">
                <h4>Il y a {{ recipes.getTotalItemCount }} recettes au total</h4>
            </div>

            <div class="d-flex justify-content-center flex-wrap">
                {% for recipe in recipes %}
                    <a href="{{ path('recipe.show', {id: recipe.id}) }}" class="text-decoration-none">
                        <div class="card border-primary mb-3" style="max-width:20rem">
                            <div class="card-header">{{ recipe.name }}</div>
                            <div class="card-body">
                                <h4 class="card-title">Recette n°{{ recipe.id }}</h4>
                                <div class="card-text">{{ recipe.description|slice(0,100) ~ '...'}}</div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>

            <div class="pagination d-flex justify-content-center mt-4">
                {{ knp_pagination_render(recipes) }}
            </div>
        {% else %}
            <h4>Il n'y a pas de recettes</h4>
        {% endif %}
    </div>
{% endblock %}
