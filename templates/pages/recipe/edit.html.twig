{% extends "base.html.twig" %}

{% block title %}
    SymRecipe - Edition d'une recette
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Modification de la recette</h1>
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.time) }}
        {{ form_row(form.nbPeople) }} {# Ajouté pour correspondre à l'ordre de 'new' #}
        {{ form_row(form.difficulty) }}
        {{ form_row(form.price) }}
        {# Le champ 'ingredients' n'est pas présent dans l'entité Recipe telle que tu l'as montrée,
           mais s'il est ajouté dans RecipeType, il doit être ici.
           Je l'ajoute pour la cohérence avec 'new', tu peux le retirer si non pertinent. #}
        {{ form_row(form.ingredients) }}

        <div class="form-check mt-4">
            {{ form_row(form.isFavorite) }}
        </div>

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}